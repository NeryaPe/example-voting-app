pipeline {

  
  environment {
        GOOGLE_APPLICATION_CREDENTIALS = credentials('gcp')
  }


    stage('terraform init') {
     stage('terraform cd') {
      steps {
        sh 'cd learn-terraform-provision-gke-cluster/'
      }
     }
     stage('terraform init') {
      steps {
        sh 'terraform init'
      }
     }

     stage('terraform init') {
      steps {
        sh 'terraform apply'
      }
     }

    }
  }
}