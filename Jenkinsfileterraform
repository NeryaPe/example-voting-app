pipeline {

   agent {
    label 'gcloud'
  }

 environment {
    TF_WORKDIR = "${env.WORKSPACE}/learn-terraform-provision-gke-cluster" //Sets the Terraform Workspace
    TF_IN_AUTOMATION = 'true'
  }

  stages {
    stage('Terraform Init') {
      steps {
        sh "terraform -chdir=${env.TF_WORKDIR} init -input=false"
      }
    }

    
  }
}